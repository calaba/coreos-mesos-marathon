[Unit]
Description=Mesos Slave service
After=docker.service

[Service]
ExecStart=/bin/bash -c "/usr/bin/docker run --rm -v /usr/lib64/libdevmapper.so.1.02:/usr/lib/libdevmapper.so.1.02 -v /var/run/docker.sock:/var/run/docker.sock -e ZOOKEEPER_ENDPOINTS=`/var/lib/scripts/get_zookeeper_endpoints.sh` -p 5051:5051 --name mesos-slave {{ mesosslave_image_name }}"
ExecStop=/usr/bin/docker rm -f mesos-slave

[X-Fleet]
X-Conflicts=mesos-slave.*.service
